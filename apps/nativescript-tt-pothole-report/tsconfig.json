{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "lib": ["es2018", "es2017", "dom", "webworker", "es6"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@qarun-qb/*": ["../../../libs/*"],
      "@qarun-qb/nativescript": [
        "../../../xplat/nativescript/index.ts"
      ],
      "@qarun-qb/nativescript/*": [
        "../../../xplat/nativescript/*"
      ],
      "*": ["./node_modules/*"]
    }
  },
  "exclude": ["node_modules", "platforms"]
}
